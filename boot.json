    "addonPlugin": [{
            "modName": "TweeReplacer",
            "addonName": "TweeReplacerAddon",
            "modVersion": "1.0.0",
            "params": [{
                    "passage": "Robin's Lemonade",
                    "findString": "<<print $robin.timer.hurt",
                    "replaceFile": "game/robin-work/lemonade/lemonadeUpgradeResult.txt"
                },
                {
                    "passage": "Widgets Robin",
                    "findString": "<<lrtrauma>>\n\t\t<br>",
                    "replaceFile": "game/robin-work/lemonade/lemonadeUpgrade.txt"
                },
                {
                    "passage": "Danube Tutor",
                    "findString": "<</if>>\n<br><br>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorIntro.txt"
                },
                {
                    "passage": "Widgets Robin",
                    "findString": "\t\t<br>\n\t\t<<robinbully>>",
                    "replaceFile": "game/robin-work/RobinWorkTalk.txt"
                },
                {
                    "passage": "Oxford Street",
                    "findString": "\t\t<<if $robindebtevent gte 1>>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorWalkHome.txt"
                },
                {
                    "passage": "Robin Walk Home",
                    "findString": "<<endevent>>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorAfterWalkHome.txt"
                },
                {
                    "passage": "Robin Walk Home Topless",
                    "findString": "\t<<link [[继续|Orphanage]]>><<endevent>><</link>>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorAfterWalkHomeTopless1.txt",
                    "all": true
                },
                {
                    "passage": "Robin Walk Home Topless",
                    "findString": "\t<<endevent>>\n\t<<link [[继续|Orphanage]]>><</link>>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorAfterWalkHomeTopless2.txt",
                    "all": true
                },
                {
                    "passage": "Robin Walk Home Refuse",
                    "findString": "<<endevent>>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorAfterWalkHome.txt"
                },
                {
                    "passage": "Robin Walk Home Towel",
                    "findString": "<<endevent>>",
                    "replaceFile": "game/robin-work/danube-tutor/danubeTutorAfterWalkHome.txt"
                },
                {
                    "passage": "Robin's Room Entrance",
                    "findString": "<<elseif _robin_location is \"school\">>",
                    "replaceFile": "game/robin-work/locationReplace.txt"
                },
                {
                    "passage": "Robin's Room Entrance",
                    "findString": "<<if $robindebt gte $robindebtlimit and $robindebtintro isnot 1 and $robinpaid isnot 1>>",
                    "replace": "<<if $robinInDebt and $robindebtintro isnot 1 and $robinpaid isnot 1>>"
                },
                {
                    "passage": "Widgets Robin",
                    "findString": "\t\t<<elseif $robinconsole is 1 and $robinpaid isnot 1 and $robindebt gte ($robindebtlimit - 1) and $robinconsolelost isnot 1>>",
                    "replace": "\t\t<<elseif $robinconsole is 1 and $robinpaid isnot 1 and $robinSoldConsole and $robinconsolelost isnot 1>>"
                },
                {
                    "passage": "Robin's Lemonade Help",
                    "findString": "<<effects>>",
                    "replaceFile": "game/robin-work/lemonade/lemonadeUpgradeResultRain.txt"
                },
                {
                    "passage": "Robin's Lemonade Purchase",
                    "findString": "<<effects>>",
                    "replaceFile": "game/robin-work/lemonade/lemonadeUpgradeResultRain.txt"
                },
                {
                    "passage": "Robin's Lemonade",
                    "findString": "<<effects>>",
                    "replaceFile": "game/robin-work/lemonade/lemonadeUpgradeResultRain.txt"
                },
                {
                    "passage": "Robin's Lemonade",
                    "findString": "<<lemonade_stand_options>>",
                    "replaceFile": "game/robin-work/lemonade/lemonadeUpgradeDevice.txt"
                },
                {
                    "passage": "Robin Money",
                    "findString": "\t<</if>>\n<<else>>",
                    "replaceFile": "game/origin-replace/robinMoneyReplace.txt"
                },
                {
                    "passage": "Robin Hug Cry",
                    "findString": "<<set $robincrycount to 0>>",
                    "replace": "<<set $robincrycount to 1>>"
                },
                {
                    "passage": "Robin Hug Cry",
                    "findString": "<<if _robinlove gte 80 and $robincrycount gte 5>>",
                    "replace": "<<if _robinlove gte 80 and $robincrycount gte 2>>"
                },
                {
                    "passage": "Robin Cinema Popcorn",
                    "findString": "\t<<if $money gte 1000>>",
                    "replaceFile": "game/robin-work/lemonade/goods-list/PopcornIntro.txt"
                },
                {
                    "passage": "Robin Cinema Popcorn",
                    "findString": "<<set $robinmoney -= 10>><<set $popcorn += 1>>\n\t\t\t<br><br>",
                    "replaceFile": "game/robin-work/lemonade/goods-list/PopcornIntroRobinPay.txt"
                },
                {
                    "passage": "Robin Cinema Popcorn",
                    "findString": "<<set $robinmoney -= 10>><<set $popcorn += 1>>\n\t\t\t<br><br>",
                    "replaceFile": "game/robin-work/lemonade/goods-list/PopcornIntroRobinPay.txt"
                },
                {
                    "passage": "Orphanage Loft",
                    "findString": "<br>\n<<if $loft_spray isnot 1 and $spray lt $spraymax and $loft_kylar>>",
                    "replaceFile": "game/robin-work/lemonade/goods-list/snackIntro.txt"
                }
            ]
        },
        {
            "modName": "ReplacePatcher",
            "addonName": "ReplacePatcherAddon",
            "modVersion": "1.0.0",
            "params": {
                "js": [{
                        "from": "if (V.robinpaid !== 1 && V.robindebt >= V.robindebtlimit && V.robindebtevent <= 0) ",
                        "to": "fragment.append(wikifier(\"weeklymoneycheck\")); if (V.robinpaid !== 1 && V.robindebtevent <= 0 && V.robinInDebt) ",
                        "fileName": "time.js",
                        "_comment1": "每周结束时，检查当前已有的工作并调widget函数加钱, 并修改罗宾码头惩罚条件（罗宾金钱必须小于0，与robindebt和robindebtlimit无关）"
                    },
                    {
                        "from": "function dayPassed() {",
                        "to": "function dayPassed() { if (V.danubeTutorIntro && V.danubeTutorIntro == 2){ V.danubeTutorIntro = 3;}",
                        "fileName": "time.js",
                        "_comment1": "如果当前家教状态为阶段2，一天后变为阶段3"
                    },
                    {
                        "from": "else if (Time.schoolDay && between(Time.hour, 8, 15))",
                        "to": "else if (V.danubeTutorIntro == 4 && Time.schoolDay && ((Time.hour === 15 && between(Time.minute, 6, 59)) || (Time.hour === 16 && between(Time.minute, 0, 20)))) \n { T.robin_location = \"danube\";} \n else if (Time.schoolDay && between(Time.hour, 8, 15))",
                        "fileName": "ingame.js",
                        "_comment1": "罗宾当前状态调整: 做家教成功后每天上学日3：06—4:20位置在多瑙河街"
                    }
                ]
            }
        }
    ],
    "dependenceInfo": [{
            "modName": "TweeReplacer",
            "version": "^1.0.0"
        },
        {
            "modName": "ReplacePatcher",
            "version": "^1.0.0"
        }
    ]
